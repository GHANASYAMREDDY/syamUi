  <script>
    let obj=new Date();    
    let date=obj.toLocaleDateString();
    let usd = prompt("Enter the Dollar Amount:");
    const rate=84.50;
    let inr= usd*rate;   
    let time=obj.toLocaleTimeString();
    
    
    

    // Fill table cells
    document.getElementById("dCell").innerText = date;
    document.getElementById("daCell").innerText= usd;
    document.getElementById("iCell").innerText = inr.toFixed(2);
    document.getElementById("tCell").innerText = time;
    
    </script>

